[32m+[m[32m## API Endpoints[m
[32m+[m
[32m+[m[32m### Charger Management[m
[32m+[m
[32m+[m[32m#### POST /api/chargers[m
[32m+[m[32mCreates a new charger with unique wallet.[m
[32m+[m[32m{[m
[32m+[m[32m  "id_charger": "CHARGER_001",[m
[32m+[m[32m  "owner_address": "0x742d35Cc6634C0532925a3b8D56B4B8d3d73a9B1",[m
[32m+[m[32m  "status": "active"[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m#### GET /api/chargers/detailed[m
[32m+[m[32mGets complete information for all chargers.[m
[32m+[m[32m{[m
[32m+[m[32m  "summary": {[m
[32m+[m[32m    "total_chargers": 3,[m
[32m+[m[32m    "active_chargers": 2,[m
[32m+[m[32m    "total_transactions": 15[m
[32m+[m[32m  },[m
[32m+[m[32m  "chargers": [...],[m
[32m+[m[32m  "system_info": {...}[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m### Charger Actions[m
[32m+[m
[32m+[m[32m#### POST /api/chargers/:id/action[m
[32m+[m[32mExecutes actions on a specific charger.[m
[32m+[m
[32m+[m[32mAvailable actions:[m
[32m+[m[32m- turn_on - Activates charger and schedules transactions[m
[32m+[m[32m- turn_off - Deactivates charger[m
[32m+[m[32m- restart - Restarts (off for 3s, then on)[m
[32m+[m[32m- create_ticket - Creates simulated support ticket[m
[32m+[m[32m- pay_costs - Pays operational costs (40% of balance)[m
[32m+[m[32m- send_to_owner - Transfers funds to owner[m
[32m+[m
[32m+[m[32m{[m
[32m+[m[32m  "action": "turn_on"[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m### Transaction Simulation[m
[32m+[m
[32m+[m[32m#### POST /api/chargers/:id/simulate_transaction[m
[32m+[m[32mSimulates a manual transaction.[m
[32m+[m
[32m+[m[32m{[m
[32m+[m[32m  "amount_eth": 0.001[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m### Logs and Monitoring[m
[32m+[m
[32m+[m[32m#### GET /api/logs[m
[32m+[m[32mGets system logs with filtering options.[m
 [m
